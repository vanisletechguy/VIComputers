<p>
  <strong>Item Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Item Name:</strong>
  <%= @product.cost %>
</p>


<p>
  <strong>PAYMENT STAGE:</strong>
  <%= @order.payment_stage %>
</p>

<p>
  <strong>Processing Stage:</strong>
  <%= 'Confirm and click Order' if @order.payment_stage == 0 %>
</p>

<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <td><%= image_tag @product.image %></td>
  <div class="form-inputs">
    <%= f.input :total_cost %>
    <%= f.input :product_ids %>
    <%= f.input :payment_stage %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
